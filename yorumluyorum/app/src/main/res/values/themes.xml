<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.yorumluyorum" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        !-- Primary brand color. -->
        <item name="colorPrimary">@color/splashback</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/splashback</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="progressBar">
        <item name="colorSecondary">@color/dark_green</item>
    </style>
    <style name="menuTitle">
        <item name="android:actionMenuTextColor">@color/yaziRenk</item>
    </style>


    <style name="blackProgressBar">
        <item name="colorSecondary">@color/black</item>
    </style>
    <style name="navBar">
        <item name="colorSecondary">#173428</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>




